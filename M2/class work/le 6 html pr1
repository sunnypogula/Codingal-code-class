<head>
    <style>
        div {
            border:3px solid blueviolet;
            border-radius:10px
        }
        div.sticky {
            position:sticky;
            top:10px;/* sticks at the top when reached */
            left:30px;
            width:350px;
            background-color:red;
            border:3px dashed yellow;
            margin:10px;
        }
        div.fixed {
            position:fixed;
            top:10px;
            right:10px;
            width:200px;
            background-color:lightblue;
            border:3px solid pink;
        }
        div.relative {
            position:relative;
            left:150px;
            border:3px solid burlywood;
            width:300px;
        }
        div.absolute {
            position:absolute;
            left:30px;
            border:3px solid blueviolet;
        }
    </style>
</head>
